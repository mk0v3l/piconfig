sudo apt update
sudo apt install zsh -y && chsh -s /usr/bin/zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
git clone https://github.com/zsh-users/zsh-autosuggestions /home/mkovel/.oh-my-zsh/custom/plugins/zsh-autosuggestions
git config --global user.email mickaelkovel@hotmail.com
git config --global user.name mk0v3l
sudo apt install git
sudo apt install python3-pip
sudo pip3 install adafruit-circuitpython-ads1x15 --break-system-packages
sudo apt install vim -y
type -p curl >/dev/null || (sudo apt update && sudo apt install curl -y)
curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | sudo dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg && sudo chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg && echo "deb [arch=armhf signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | sudo tee /etc/apt/sources.list.d/github-cli.list > /dev/null && sudo apt update && sudo apt install gh -y
